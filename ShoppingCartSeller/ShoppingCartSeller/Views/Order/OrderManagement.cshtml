@{
    ViewData["Title"] = "Order Management";
    Layout = "~/Views/Shared/_LayoutSellerAdmin.cshtml";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Order Management</h3>
        <button class="btn btn-success" id="btnCreateOrder">Create Sample Order</button>
    </div>

    <div class="table-responsive">
        <table id="orderTable" class="table table-striped table-bordered">
            <thead class="table-secondary">
                <tr>
                    <th>Order Number</th>
                    <th>User ID</th>
                    <th>Status</th>
                    <th>Total Amount</th>
                    <th>Placed At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="orderTableBody">
                <tr><td colspan="6" class="text-center">Loading...</td></tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Modals remain unchanged -->
<!-- Order Details Modal -->
<div class="modal fade" id="orderDetailsModal" tabindex="-1" style="margin-top: 80px; margin-left:30px">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Order Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="orderDetailsBody" style="max-height: 70vh; overflow-y: auto;">Loading...</div>
        </div>
    </div>
</div>

<!-- Invoice Modal -->
<div class="modal fade" id="invoiceModal" tabindex="-1" aria-labelledby="invoiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="invoiceModalLabel">Invoice</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="invoiceBody" style="max-height: 70vh; overflow-y: auto;">
                Loading invoice...
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" id="downloadInvoice">Download PDF</button>
            </div>
        </div>
    </div>
</div>

<!-- Refund Modal -->
<div class="modal fade" id="refundModal" tabindex="-1" style="margin-top: 80px; margin-left:30px">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Refund Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <textarea class="form-control" id="refundReason" placeholder="Enter reason for refund"></textarea>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" id="submitRefund">Submit Refund</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DataTables CSS & JS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {

            function getStatusLabel(statusCode) {
                const statusMap = {
                    0: "Delivered",
                    1: "Confirmed",
                    2: "Shipped",
                    3: "Placed",
                    4: "Cancelled",
                    5: "Returned",
                    6: "Pending"
                };
                return statusMap[statusCode] || "Unknown";
            }


            function loadOrders() {
                $.get('/Order/GetOrders', function (res) {
                    if (!res.success || !res.data.length) {
                        $("#orderTableBody").html('<tr><td colspan="6" class="text-center">No orders found.</td></tr>');
                        return;
                    }
                    let rows = '';
                    res.data.forEach(o => {
                        rows += `<tr>
                                            <td>${o.orderNumber}</td>
                                            <td>${o.userId}</td>
                                            <td>${getStatusLabel(o.status)}</td>
                                            <td>${o.totalAmount}</td>
                                            <td>${new Date(o.placedAt).toLocaleString()}</td>
                                            <td>
                                                <button class="btn btn-info btn-sm btnView" data-id="${o.id}">View</button>
                                                <button class="btn btn-warning btn-sm btnInvoice" data-id="${o.id}">Invoice</button>
                                                <button class="btn btn-danger btn-sm btnRefund" data-id="${o.id}">Refund</button>
                                            </td>
                                        </tr>`;
                    });
                    $("#orderTableBody").html(rows);
                    initializeDataTable();
                });
            }

            $("#btnCreateOrder").click(function () {
                $.post('/Order/CreateSampleOrder', function (res) {
                    if (res.success) {
                        alert(res.message);
                        loadOrders();
                    }
                });
            });

            $(document).on('click', '.btnView', function () {
                let orderId = $(this).data('id');
                $.get(`/Order/GetOrderDetails/${orderId}`, function (res) {
                    if (res.success) {
                        const o = res.data;
                        let html = `<p><strong>Order Number:</strong> ${o.orderNumber}</p>
                                            <p><strong>User ID:</strong> ${o.userId}</p>
                                            <p><strong>Status:</strong> ${getStatusLabel(o.status)}</p>
                                            <p><strong>Total Amount:</strong> ${o.totalAmount}</p>
                                            <p><strong>Placed At:</strong> ${new Date(o.placedAt).toLocaleString()}</p>`;
                        $("#orderDetailsBody").html(html);
                        new bootstrap.Modal(document.getElementById('orderDetailsModal')).show();
                    }
                });
            });

            $(document).on('click', '.btnInvoice', function () {
                let orderId = $(this).data('id');
                $.get(`/Order/GetInvoice/${orderId}`, function (res) {
                    if (!res.success) {
                        $("#invoiceBody").html('<p class="text-danger">Invoice not available.</p>');
                        return;
                    }
                    const o = res.data;
                    const html = `
                                <h5>Invoice for Order ${o.orderNumber}</h5>
                                <p><strong>User:</strong> ${o.userId}</p>
                                <p><strong>Total:</strong> ₹${o.totalAmount}</p>
                                <p><strong>Status:</strong> ${getStatusLabel(o.status)}</p>
                                <p><strong>Placed At:</strong> ${new Date(o.placedAt).toLocaleString()}</p>
                                <hr />
                                <p>Thank you for shopping with us!</p>
                            `;
                    $("#invoiceBody").html(html);
                    $('#invoiceModal').data('order-id', orderId);
                    new bootstrap.Modal(document.getElementById('invoiceModal')).show();
                });
            });

            $(document).on('click', '.btnRefund', function () {
                let orderId = $(this).data('id');
                $('#refundModal').data('order-id', orderId);
                new bootstrap.Modal(document.getElementById('refundModal')).show();
            });

            $("#submitRefund").click(function () {
                let orderId = $('#refundModal').data('order-id');
                let reason = $('#refundReason').val();
                $.post(`/Order/RequestRefund`, { orderId, reason }, function (res) {
                    alert(res.message);
                    $('#refundReason').val('');
                    loadOrders();
                });
            });

            loadOrders();
        });
    </script>
}