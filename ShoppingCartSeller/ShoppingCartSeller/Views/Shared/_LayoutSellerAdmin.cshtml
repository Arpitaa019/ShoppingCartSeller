<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f7fa;
            font-family: 'Poppins', sans-serif;
        }

        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 240px;
            padding: 2px;
            background-color: #2c3e50;
            z-index: 1050;
        }

        .navbar {
            z-index: 1100;
            background-color: #2c3e50;
        }

        .nav-link {
            padding: 10px 15px;
            margin-bottom: 5px;
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }

        .nav-link.active {
            background-color: #0d6efd;
            font-weight: bold;
            color: #fff !important;
        }

        .nav-link:hover {
            background-color: #2563eb;
            color: #fff !important;
        }

        .content {
            margin-left: 236px;
            margin-top: 70px;
            padding: 2rem;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 3px 8px rgba(0,0,0,0.1);
        }

        .pricing-hover {
            position: relative;
        }

        .pricing-hover .submenu {
            display: none;
            position: absolute;
            top: 0;
            left: 236px; /* aligns beside sidebar */
            min-width: 200px;
            z-index: 1060;
        }
        .submenu{
            background-color: #2c3e50;
        }
        .pricing-hover:hover .submenu {
            display: block;
        }

        .submenu .nav-link {
            padding: 8px 12px;
            margin-bottom: 4px;
            border-radius: 6px;
        }

        .submenu .nav-link:hover {
            background-color: #2563eb;
            color: #fff !important;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark  fixed-top">
        <div class="container-fluid justify-content-center">
            <span class="navbar-brand fw-bold mb-2 h1 text-center">@ViewData["Title"]</span>
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar text-white">
        <h4 class="text-center mb-4"><i class="fa-solid fa-store"></i> SellerHub</h4>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" href="/Dashboard/Index">
                    <i class="fa-solid fa-chart-line me-2"></i> Dashboard
                </a>
            </li>
            <li class="nav-item"><a class="nav-link text-white @(ViewContext.RouteData.Values["action"]?.ToString() == "UploadedProduct" ? "active" : "")" href="/Dashboard/UploadedProduct"><i class="fa-solid fa-box-open me-2"></i> Product Management</a></li>
            <li class="nav-item position-relative pricing-hover">
                <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "ProductPrice" ? "active" : "")">
                    <i class="fa-solid fa-tags me-2"></i> Pricing & Offers
                    <i class="fa-solid fa-chevron-right float-end"></i>
                </a>

                <!-- Hover Submenu -->
                <div class="submenu text-white p-2 rounded shadow">
                    <a class="nav-link text-white @(ViewContext.RouteData.Values["action"]?.ToString() == "Create" ? "active" : "")" href="/ProductPrice/Prices">
                        <i class="fa-solid fa-tag me-2"></i> Price
                    </a>
                    <a class="nav-link text-white @(ViewContext.RouteData.Values["action"]?.ToString() == "ApplyCharges" ? "active" : "")" href="/ProductPrice/ProductCharges">
                        <i class="fa-solid fa-coins me-2"></i> Charges
                    </a>
                    <a class="nav-link text-white @(ViewContext.RouteData.Values["action"]?.ToString() == "CreateOffer" ? "active" : "")" href="/Offer/ProductOffer">
                        <i class="fa-solid fa-gift me-2"></i> Offers
                    </a>
                </div>
            </li>
            <li class="nav-item"><a class="nav-link text-white @(ViewContext.RouteData.Values["action"]?.ToString() == "OrderManagement" ? "active" : "")" href="/Order/OrderManagement"><i class="fa-solid fa-truck me-2"></i> Order Management</a></li>
            <li class="nav-item"><a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Inventory" ? "active" : "")" href="/Inventory/Index"><i class="fa-solid fa-warehouse me-2"></i> Inventory</a></li>
            <li class="nav-item"><a class="nav-link text-white @(ViewContext.RouteData.Values["action"]?.ToString() == "CustomerInteraction" ? "active" : "")" href="/Customer/CustomerInteraction"><i class="fa-solid fa-user-group me-2"></i> Customer Interaction</a></li>
            <li class="nav-item"><a class="nav-link text-white @(ViewContext.RouteData.Values["action"]?.ToString() == "Generate" ? "active" : "")" href="/Report/Generate"><i class="fa-solid fa-chart-pie me-2"></i> Reports</a></li>
            <li class="nav-item"><a class="nav-link text-white @(ViewContext.RouteData.Values["action"]?.ToString() == "Finance" ? "active" : "")" href="/Finance/History"><i class="fa-solid fa-wallet me-2"></i> Finance</a></li>
            <li class="nav-item"><a class="nav-link text-white @(ViewContext.RouteData.Values["action"]?.ToString() == "Setting" ? "active" : "")" href="/Dashboard/Setting"><i class="fa-solid fa-gear me-2"></i> Settings</a></li>
            <li class="nav-item"><a class="nav-link text-white @(ViewContext.RouteData.Values["action"]?.ToString() == "Logout" ? "active" : "")" href="/Dashboard/Logout"><i class="fa-solid fa-arrow-right-from-bracket me-2"></i> Logout</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="content">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>