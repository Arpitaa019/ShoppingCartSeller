@{
    ViewData["Title"] = "Customer Interaction";
    Layout = "~/Views/Shared/_LayoutSellerAdmin.cshtml";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Customer Interaction</h3>
        <button class="btn btn-primary" id="btnRefresh">Refresh</button>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-secondary">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Product</th>
                    <th>Rating</th>
                    <th>Feedback</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="interactionTableBody">
                <tr><td colspan="8" class="text-center">Loading...</td></tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Reply Modal -->
<div class="modal fade" id="replyModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reply to Customer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <textarea class="form-control" id="replyMessage" rows="4" placeholder="Type your reply here..."></textarea>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success" id="submitReply">Send Reply</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            function loadInteractions() {
                $.get('/Customer/GetInteractions', function (res) {
                    if (!res.success || !res.data.length) {
                        $("#interactionTableBody").html('<tr><td colspan="8" class="text-center">No interactions found.</td></tr>');
                        return;
                    }

                    let rows = '';
                    res.data.forEach(i => {
                        rows += `<tr>
                                            <td>${i.name}</td>
                                            <td>${i.email}</td>
                                            <td>${i.phone}</td>
                                            <td>${i.productName}</td>
                                            <td>${i.rating}</td>
                                            <td>${i.feedback || '-'}</td>
                                            <td>${new Date(i.createdAt).toLocaleString()}</td>
                                            <td>
                                                <button class="btn btn-info btn-sm btnReply" data-id="${i.id}">Reply</button>
                                            </td>
                                        </tr>`;
                    });
                    $("#interactionTableBody").html(rows);
                });
            }

            $(document).on('click', '.btnReply', function () {
                let interactionId = $(this).data('id');
                $('#replyModal').data('interaction-id', interactionId);
                new bootstrap.Modal(document.getElementById('replyModal')).show();
            });

            $("#submitReply").click(function () {
                let interactionId = $('#replyModal').data('interaction-id');
                let message = $('#replyMessage').val();
                $.post('/Customer/SendReply', { interactionId, message }, function (res) {
                    alert(res.message);
                    $('#replyMessage').val('');
                    loadInteractions();
                });
            });

            $("#btnRefresh").click(loadInteractions);
            loadInteractions();
        });
    </script>
}